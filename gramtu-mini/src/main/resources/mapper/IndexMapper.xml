    <!-- 查询列表 -->
    <select id="getAdvertList" parameterType="Map" resultType="Map">
        SELECT
              id as adid
             ,title
             ,adimage
             ,adtype
             ,sort
             ,innerurl
        FROM
             g_advert
        ORDER BY sort
    </select>

</mapper>