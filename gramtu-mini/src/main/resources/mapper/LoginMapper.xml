<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frank.gramtu.mini.login.LoginRepository">

    <!--
         小程序用户登录/注册Mapper.
         @author 张孝党 2019/12/27.
         @version V0.0.1.
         <p>
         更新履历： V0.0.1 2019/12/27 张孝党 创建.
     -->

    <!-- 查询 -->
    <select id="getWxUserCnt" parameterType="Map" resultType="Map">
        SELECT
             openid
            ,phonenumber
            ,mark
        FROM
             g_wx_user
        WHERE
            openid = #{openid}
    </select>

    <!-- 新增用户 -->
    <insert id="insWxUserInfo" parameterType="Map">
        INSERT INTO
            g_wx_user(
                 id
                ,openid
                ,avatarurl
                ,nick_name
                ,phonenumber
                ,pure_phone_number
                ,country_code
                ,gender
                ,city
                ,province
                ,country
            )
        VALUES (
                 #{id}
                ,#{openid}
                ,#{avatarurl}
                ,#{nick_name}
                ,#{phonenumber}
                ,#{pure_phone_number}
                ,#{country_code}
                ,#{gender}
                ,#{city}
                ,#{province}
                ,#{country}
        )
    </insert>

    <!-- 更新用户信息 -->
    <update id="updWxUserInfo" parameterType="Map">
        UPDATE
            g_wx_user
        SET
             avatarurl = #{avatarurl}
            ,nick_name = #{nick_name}
            ,phonenumber = #{phonenumber}
            ,pure_phone_number = #{pure_phone_number}
            ,country_code = #{country_code}
            ,gender = #{gender}
            ,city = #{city}
            ,province = #{province}
            ,country = #{country}
        WHERE
            openid = #{openid}
    </update>

</mapper>